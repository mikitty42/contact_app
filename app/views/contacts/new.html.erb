<%= form_with(model: @contacts,local: true) do |form| %>
    <% if @contacts.errors.any? %>
        <div id='error_explanation'>
            <h2><%= @contacts.errors.count %>件のエラーがあります</h2>
            <ul>
            
            <% @contacts.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            
            </ul>
        </div>
    <% end %>
    
    <div class='contact_name'>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    
    <div class='contact_email'>
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>
    
    <div class='contact_content'>
        <%= form.label :content %>
        <%= form.text_field :content %>
    </div>
    
    <%= form.submit %>
<% end %>
